<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".userinterface.fragments.LinkDisplayFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="THIS IS WHERE LINKS WILL BE DISPLAYED"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_link"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/screen_edge_margin"
            android:layout_marginBottom="@dimen/screen_edge_margin"
            android:src="@drawable/ic_add_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>